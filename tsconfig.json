{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "NodeNext",
        "esModuleInterop": true,
        "target": "ES2022",
        "lib": ["ES2022"],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "incremental": true,
        "composite": true,
        "rootDir": "src",
        "checkJs": true
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
    "exclude": ["src/deprecated"]
}
